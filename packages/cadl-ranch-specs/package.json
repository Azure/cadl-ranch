{
  "name": "@azure-tools/cadl-ranch-specs",
  "version": "0.4.1",
  "description": "Cadl scenarios and mock apis",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "watch": "tsc -p ./tsconfig.build.json --watch",
    "build": "tsc -p ./tsconfig.build.json",
    "clean": "rimraf dist/ temp/",
    "lint": "eslint . --ext .ts --max-warnings=0",
    "lint:fix": "eslint . --fix --ext .ts",
    "validate-scenarios": "cadl-ranch validate-scenarios ./http",
    "generate-scenarios-summary": "cadl-ranch generate-scenarios-summary ./http",
    "upload-manifest": "cadl-ranch upload-manifest ./http --storageAccountName cadlranchcoverage",
    "upload-coverage": "cadl-ranch upload-coverage --storageAccountName cadlranchcoverage",
    "validate-mock-apis": "cadl-ranch validate-mock-apis ./http",
    "check-scenario-coverage": "cadl-ranch check-coverage ./http",
    "serve": "cadl-ranch serve ./http",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/cadl-ranch.git"
  },
  "author": "Microsoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Azure/cadl-ranch/issues"
  },
  "homepage": "https://github.com/Azure/cadl-ranch#readme",
  "dependencies": {
    "@azure-tools/cadl-ranch": "workspace:~",
    "@azure-tools/cadl-ranch-api": "workspace:~"
  },
  "devDependencies": {
    "@azure-tools/cadl-autorest": "0.21.0",
    "@cadl-lang/eslint-config-cadl": "^0.4.1",
    "@azure-tools/cadl-dpg": "~0.1.0",
    "@cadl-lang/openapi": "0.13.0",
    "@cadl-lang/openapi3": "0.16.0",
    "@types/node": "^18.7.16",
    "eslint": "^8.23.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "@azure-tools/cadl-azure-core": "~0.8.0",
    "@azure-tools/cadl-ranch-expect": "workspace:~",
    "@cadl-lang/compiler": "~0.36.0",
    "@cadl-lang/rest": "~0.18.0",
    "@cadl-lang/versioning": "~0.9.0"
  }
}
