{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Compile Scratch${cwd}",
      "program": "${workspaceFolder}/packages/cadl-ranch-specs/node_modules/@cadl-lang/compiler/dist/core/cli.js",
      "args": [
        "compile",
        ".",
        "--import=\"@azure-tools/cadl-ranch-expect\"",
      ],
      "smartStep": true,
      "sourceMaps": true,
      "skipFiles": ["<node_internals>/**/*.js"],
      "cwd": "${workspaceFolder}/packages/cadl-ranch-specs/http/scratch",
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run server",
      "program": "${workspaceFolder}/src/cli/cli.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "console": "integratedTerminal",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}"
    }
  ]
}
