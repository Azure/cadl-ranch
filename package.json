{
  "name": "@azure-tools/cadl.testserver",
  "private": true,
  "version": "0.1.0",
  "description": "Cadl scenarios and server implementing a mock api",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "watch": "tsc -p ./tsconfig.ws.json --watch",
    "build": "npm run build --ws",
    "clean": "npm run clean --ws",
    "format": "npm run -s prettier -- --write",
    "check-format": "npm run -s prettier -- --check",
    "prettier": "prettier --config ./.prettierrc.yaml **/*.{ts,js,cjs,mjs,json,yml,yaml,md}"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Azure/cadl.testserver.git"
  },
  "author": "Microsoft",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Azure/cadl.testserver/issues"
  },
  "homepage": "https://github.com/Azure/cadl.testserver#readme",
  "devDependencies": {
    "@cadl-lang/prettier-plugin-cadl": "^0.5.12",
    "eslint": "^8.19.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-unicorn": "^43.0.0",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.5",
    "typescript": "^4.7.4"
  }
